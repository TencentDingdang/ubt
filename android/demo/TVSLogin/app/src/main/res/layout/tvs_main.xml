<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/toWifiSettingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、连接设备WIFI热点"
            />
        <Button
            android:id="@+id/logoutUnbindBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5、注销帐号解除绑定"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/getStatusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2、获取设备状态信息"
            />
        <ProgressBar
            android:id="@+id/getStatusProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            style="?android:attr/progressBarStyleSmall"
            />
        <Button
            android:id="@+id/factoryResetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6、恢复出厂设置"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/getStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/wlanGetApListBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3、获取WIFI列表"
                    />
                <ProgressBar
                    android:id="@+id/wlanGetApListProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleSmall"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/wlanGetApListRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/scanDeviceBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4、获取设备列表"
                    />
                <ProgressBar
                    android:id="@+id/scanDeviceProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleSmall"
                    />
                <Button
                    android:id="@+id/stopScanDeviceBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/scanDeviceRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
